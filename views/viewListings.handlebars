<div class="row">
  {{#each listings}}
    <div class="col-md-4 mb-4">
      <div class="card">
        <!-- Display listing image -->
        <img
          src="{{this.images.picture_url}}"
          class="card-img-top"
          alt="{{this.name}}"
          onerror="this.src='https://via.placeholder.com/300?text=No+Image'"
        />
        <div class="card-body">
          <!-- Display listing details -->
          <h5 class="card-title">{{this.name}}</h5>
          <p class="card-text">
            <strong>Summary:</strong>
            {{this.summary}}<br />
            <strong>Price:</strong>
            ${{this.price}}
            / night<br />
            <strong>Type:</strong>
            {{this.property_type}},
            {{this.room_type}}
          </p>
          <a
            href="{{this.listing_url}}"
            class="btn btn-primary"
            target="_blank"
          >
            View Details
          </a>
        </div>
      </div>
    </div>
  {{/each}}
</div>

<!-- Show message if no listings are available -->
{{#unless listings}}
  <div class="alert alert-warning text-center" role="alert">
    No listings available.
  </div>
{{/unless}}