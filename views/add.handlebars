<div class="container mt-5">
  <div class="card">
    <div class="card-header text-center">
      <h2>Create a New Listing</h2>
    </div>
    <div class="card-body">
      <form action="/api/AirBnBs" method="POST">

        <!-- Property Type Field -->
        <div class="form-group">
          <label for="property_type">Property Type</label>
          <select
            id="property_type"
            name="property_type"
            class="form-control select2"
            required
          >
            <option value="Apartment">Apartment</option>
            <option value="House">House</option>
            <option value="Condo">Condo</option>
            <option value="Loft">Loft</option>
            <option value="Townhouse">Townhouse</option>
            <option value="Villa">Villa</option>
            <option value="Cottage">Cottage</option>
            <option value="Bungalow">Bungalow</option>
            <option value="Chalet">Chalet</option>
            <option value="Farmhouse">Farmhouse</option>
            <option value="Studio">Studio</option>
          </select>
          {{#if errors.property_type}}
            <div class="text-danger">{{errors.property_type}}</div>
          {{/if}}
        </div>
        <div class="form-group">
          <label for="name">Listing Name</label>
          <input
            type="text"
            id="name"
            name="name"
            class="form-control"
            placeholder="Enter listing name"
            required
          />
          {{#if errors.name}}
            <div class="text-danger">{{errors.name}}</div>
          {{/if}}
        </div>

        <div class="form-group">
          <label for="summary">Summary</label>
          <textarea
            id="summary"
            name="summary"
            class="form-control"
            placeholder="Enter a brief summary"
            rows="3"
            required
          ></textarea>
          {{#if errors.summary}}
            <div class="text-danger">{{errors.summary}}</div>
          {{/if}}
        </div>

        <div class="form-group">
          <label for="space">Space Description</label>
          <textarea
            id="space"
            name="space"
            class="form-control"
            placeholder="Describe the space"
            rows="3"
            required
          ></textarea>
          {{#if errors.space}}
            <div class="text-danger">{{errors.space}}</div>
          {{/if}}
        </div>

        <div class="form-group">
          <label for="price">Price per Night</label>
          <input
            type="number"
            id="price"
            name="price"
            class="form-control"
            placeholder="Enter price per night"
            required
          />
          {{#if errors.price}}
            <div class="text-danger">{{errors.price}}</div>
          {{/if}}
        </div>

        <div class="form-group">
          <label for="accommodates">Accommodates</label>
          <input
            type="number"
            id="accommodates"
            name="accommodates"
            class="form-control"
            placeholder="Number of guests"
            required
          />
          {{#if errors.accommodates}}
            <div class="text-danger">{{errors.accommodates}}</div>
          {{/if}}
        </div>

        <div class="form-group">
          <label for="bedrooms">Bedrooms</label>
          <input
            type="number"
            id="bedrooms"
            name="bedrooms"
            class="form-control"
            placeholder="Number of bedrooms"
            required
          />
          {{#if errors.bedrooms}}
            <div class="text-danger">{{errors.bedrooms}}</div>
          {{/if}}
        </div>

        <div class="form-group">
          <label for="beds">Beds</label>
          <input
            type="number"
            id="beds"
            name="beds"
            class="form-control"
            placeholder="Number of beds"
            required
          />
          {{#if errors.beds}}
            <div class="text-danger">{{errors.beds}}</div>
          {{/if}}
        </div>

        <div class="form-group">
          <label for="bathrooms">Bathrooms</label>
          <input
            type="number"
            id="bathrooms"
            name="bathrooms"
            class="form-control"
            placeholder="Number of bathrooms"
            step="0.1"
            required
          />
          {{#if errors.bathrooms}}
            <div class="text-danger">{{errors.bathrooms}}</div>
          {{/if}}
        </div>

        <div class="form-group">
          <label for="listing_url">Listing URL</label>
          <input
            type="url"
            id="listing_url"
            name="listing_url"
            class="form-control"
            placeholder="Enter listing URL"
          />
          {{#if errors.listing_url}}
            <div class="text-danger">{{errors.listing_url}}</div>
          {{/if}}
        </div>

        <div class="form-group">
          <label for="amenities">Amenities</label>
          <select
            id="amenities"
            name="amenities[]"
            class="form-control select2"
            multiple
            required
          >
            <option value="WiFi">WiFi</option>
            <option value="Air Conditioning">Air Conditioning</option>
            <option value="Heating">Heating</option>
            <option value="Kitchen">Kitchen</option>
            <option value="Parking">Parking</option>
            <option value="Pool">Pool</option>
            <option value="Washer">Washer</option>
            <option value="Dryer">Dryer</option>
            <option value="TV">TV</option>
            <option value="Gym">Gym</option>
          </select>
          {{#if errors.amenities}}
            <div class="text-danger">{{errors.amenities}}</div>
          {{/if}}
        </div>

        <button type="submit" class="btn btn-primary">Create Listing</button>
      </form>
    </div>
  </div>
</div>